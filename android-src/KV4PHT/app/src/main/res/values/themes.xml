<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.KV4PHT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:fontFamily">@font/jost</item>
        <item name="fontFamily">@font/jost
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>

        <item name="android:popupMenuStyle">@style/Custom.PopupMenu</item>
    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_deselected</item>
    </style>

    <style name="Custom.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textSize">20dp</item>
        <!-- <item name="android:textColor">@color/primary</item> -->
    </style>

    <style name="Theme.KV4PHT" parent="Base.Theme.KV4PHT" />
</resources>